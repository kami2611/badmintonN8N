<%- include('partials/head') %>

<!-- REPLACE the existing hero section (lines 3-15) with this carousel -->
<section class="hero-carousel">
    <div class="carousel-container">
        <!-- Slide 1: Rackets -->
        <div class="carousel-slide active" data-index="0">
            <div class="slide-bg" style="background-image: url('https://images.unsplash.com/photo-1626224583764-f87db24ac4ea?w=1920&q=80');"></div>
            <div class="slide-overlay"></div>
            <div class="slide-content">
                <span class="slide-badge">Pro Performance</span>
                <h1>Premium Rackets</h1>
                <p>Engineered for power, precision, and perfect control. Find your winning edge.</p>
                <a href="/products?category=rackets" class="btn btn-primary btn-large">Shop Rackets</a>
            </div>
        </div>
        
        <!-- Slide 2: Shoes -->
        <div class="carousel-slide" data-index="1">
            <div class="slide-bg" style="background-image: url('https://images.unsplash.com/photo-1606107557195-0e29a4b5b4aa?w=1920&q=80');"></div>
            <div class="slide-overlay slide-overlay-blue"></div>
            <div class="slide-content">
                <span class="slide-badge">Court Ready</span>
                <h1>Performance Shoes</h1>
                <p>Superior grip, lightweight comfort, and agility for every move on the court.</p>
                <a href="/products?category=shoes" class="btn btn-primary btn-large">Shop Shoes</a>
            </div>
        </div>
        
        <!-- Slide 3: Accessories -->
        <div class="carousel-slide" data-index="2">
            <div class="slide-bg" style="background-image: url('https://images.unsplash.com/photo-1599058917765-a780eda07a3e?w=1920&q=80');"></div>
            <div class="slide-overlay slide-overlay-green"></div>
            <div class="slide-content">
                <span class="slide-badge">Complete Your Kit</span>
                <h1>Accessories</h1>
                <p>Shuttlecocks, bags, grips, and everything you need to play your best game.</p>
                <a href="/products?category=accessories" class="btn btn-primary btn-large">Shop Accessories</a>
            </div>
        </div>
    </div>
    
    <!-- Navigation Arrows -->
    <button class="carousel-arrow carousel-prev" aria-label="Previous slide">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
    </button>
    <button class="carousel-arrow carousel-next" aria-label="Next slide">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="9 18 15 12 9 6"></polyline>
        </svg>
    </button>
    
    <!-- Dots Navigation -->
    <div class="carousel-dots">
        <button class="carousel-dot active" data-slide="0" aria-label="Go to slide 1"></button>
        <button class="carousel-dot" data-slide="1" aria-label="Go to slide 2"></button>
        <button class="carousel-dot" data-slide="2" aria-label="Go to slide 3"></button>
    </div>
    
    <!-- Progress Bar -->
    <div class="carousel-progress">
        <div class="carousel-progress-bar"></div>
    </div>
</section>

<section class="categories">
    <div class="section-header">
        <h2>Shop by Category</h2>
        <p>Find the perfect gear for every aspect of your game</p>
    </div>
    <div class="category-cards">
        <a href="/products?category=rackets" class="category-card">
            <div class="category-image">
                <img src="https://images.unsplash.com/photo-1626224583764-f87db24ac4ea?w=1920&q=80" alt="Badminton Rackets">
            </div>
            <div class="category-overlay">
                <h3>Rackets</h3>
                <span class="category-cta">Shop Now →</span>
            </div>
        </a>
        
        <a href="/products?category=shoes" class="category-card">
            <div class="category-image">
                <img src="https://images.unsplash.com/photo-1606107557195-0e29a4b5b4aa?w=600&h=400&fit=crop" alt="Court Shoes">
            </div>
            <div class="category-overlay">
                <h3>Court Shoes</h3>
                <span class="category-cta">Shop Now →</span>
            </div>
        </a>
        
        <a href="/products?category=accessories" class="category-card">
            <div class="category-image">
                <img src="https://images.unsplash.com/photo-1599058917765-a780eda07a3e?w=600&h=400&fit=crop" alt="Accessories">
            </div>
            <div class="category-overlay">
                <h3>Accessories</h3>
                <span class="category-cta">Shop Now →</span>
            </div>
        </a>
    </div>
</section>

<% if (featuredProducts && featuredProducts.length > 0) { %>
<section class="featured">
    <div class="section-header">
        <h2>Featured Products</h2>
        <p>Handpicked favorites from our collection</p>
    </div>
    <div class="products-grid">
        <% featuredProducts.forEach(product => { %>
            <%- include('partials/product-card', { product }) %>
        <% }) %>
    </div>
    <div class="featured-cta">
        <a href="/products" class="btn btn-outline btn-large">View All Products</a>
    </div>
</section>
<% } %>

<% if (featuredSellers && featuredSellers.length > 0) { %>
<section class="featured-sellers">
    <div class="section-header">
        <h2>Featured Sellers</h2>
        <p>Trusted stores handpicked for quality and service</p>
    </div>
    <div class="sellers-grid">
        <% featuredSellers.forEach(seller => { %>
        <a href="/store/<%= seller._id %>" class="seller-card">
            <div class="seller-avatar">
                <span class="avatar-letter"><%= seller.storeName.charAt(0).toUpperCase() %></span>
            </div>
            <div class="seller-info">
                <h3 class="seller-store-name"><%= seller.storeName %></h3>
                <p class="seller-owner">by <%= seller.name %></p>
                <div class="seller-stats">
                    <span class="seller-stat">
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path><line x1="3" y1="6" x2="21" y2="6"></line><path d="M16 10a4 4 0 0 1-8 0"></path></svg>
                        <%= seller.productCount %> Products
                    </span>
                </div>
            </div>
            <div class="seller-badge">⭐ Featured</div>
        </a>
        <% }) %>
    </div>
</section>
<% } %>

<%- include('partials/tail') %>
