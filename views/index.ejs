<%- include('partials/head', { pageClass: 'page-home' }) %>

<!-- ================================ -->
<!-- MOBILE-FIRST HOMEPAGE            -->
<!-- RacketBazaar - Badminton E-Commerce -->
<!-- ================================ -->

<div class="min-h-screen bg-surface-bg font-sans">

    <!-- ========== 1. STICKY HEADER ========== -->
    <header class="sticky top-0 z-50 bg-white/95 backdrop-blur-md border-b border-stone-100">
        <div class="flex items-center justify-between px-4 py-3">
            <!-- Left: Hamburger Menu -->
            <button id="menu-toggle" class="p-2 -ml-2 rounded-lg hover:bg-stone-100 active:bg-stone-200 transition-colors" aria-label="Open menu">
                <i data-lucide="menu" class="w-6 h-6 text-brand-dark"></i>
            </button>
            
            <!-- Center: Logo -->
            <a href="/" class="flex items-center gap-1">
                <span class="text-xl font-bold text-olive-700 tracking-tight">Racket</span>
                <span class="text-xl font-bold text-brand-dark">Bazaar</span>
            </a>
            
            <!-- Right: Icons -->
            <div class="flex items-center gap-1">
                <button class="p-2 rounded-lg hover:bg-stone-100 active:bg-stone-200 transition-colors" aria-label="Search">
                    <i data-lucide="search" class="w-5 h-5 text-brand-dark"></i>
                </button>
                <a href="/cart" class="relative p-2 rounded-lg hover:bg-stone-100 active:bg-stone-200 transition-colors" aria-label="Cart">
                    <i data-lucide="shopping-bag" class="w-5 h-5 text-brand-dark"></i>
                    <!-- Cart notification dot -->
                    <span class="cart-dot absolute top-1.5 right-1.5 w-2 h-2 bg-red-500 rounded-full"></span>
                </a>
            </div>
        </div>
    </header>

    <!-- ========== MOBILE SLIDE-OUT MENU ========== -->
    <div id="mobile-menu" class="fixed inset-0 z-50 pointer-events-none">
        <!-- Backdrop -->
        <div id="menu-backdrop" class="absolute inset-0 bg-black/50 opacity-0 transition-opacity duration-300"></div>
        
        <!-- Menu Panel -->
        <div id="menu-panel" class="absolute top-0 left-0 h-full w-72 bg-white shadow-xl transform -translate-x-full transition-transform duration-300 ease-out">
            <!-- Menu Header -->
            <div class="flex items-center justify-between p-4 border-b border-stone-100">
                <span class="text-lg font-bold text-olive-700">Menu</span>
                <button id="menu-close" class="p-2 -mr-2 rounded-lg hover:bg-stone-100" aria-label="Close menu">
                    <i data-lucide="x" class="w-5 h-5 text-brand-dark"></i>
                </button>
            </div>
            
            <!-- Menu Links -->
            <nav class="p-4 space-y-1">
                <a href="/" class="flex items-center gap-3 px-3 py-3 rounded-lg bg-olive-50 text-olive-700 font-medium">
                    <i data-lucide="home" class="w-5 h-5"></i>
                    Home
                </a>
                <a href="/products" class="flex items-center gap-3 px-3 py-3 rounded-lg text-stone-600 hover:bg-stone-50">
                    <i data-lucide="grid-3x3" class="w-5 h-5"></i>
                    All Products
                </a>
                <a href="/products?category=rackets" class="flex items-center gap-3 px-3 py-3 rounded-lg text-stone-600 hover:bg-stone-50">
                    <i data-lucide="swords" class="w-5 h-5"></i>
                    Rackets
                </a>
                <a href="/products?category=shoes" class="flex items-center gap-3 px-3 py-3 rounded-lg text-stone-600 hover:bg-stone-50">
                    <i data-lucide="footprints" class="w-5 h-5"></i>
                    Shoes
                </a>
                <a href="/stores" class="flex items-center gap-3 px-3 py-3 rounded-lg text-stone-600 hover:bg-stone-50">
                    <i data-lucide="store" class="w-5 h-5"></i>
                    Stores
                </a>
                
                <div class="pt-4 mt-4 border-t border-stone-100">
                    <a href="/seller/signup" class="flex items-center gap-3 px-3 py-3 rounded-lg text-stone-600 hover:bg-stone-50">
                        <i data-lucide="plus-circle" class="w-5 h-5"></i>
                        Become a Seller
                    </a>
                    <a href="/login" class="flex items-center gap-3 px-3 py-3 rounded-lg text-stone-600 hover:bg-stone-50">
                        <i data-lucide="log-in" class="w-5 h-5"></i>
                        Login
                    </a>
                </div>
            </nav>
        </div>
    </div>

    <!-- ========== 2. HERO SECTION ========== -->
    <section class="relative bg-olive-700 overflow-hidden">
        <!-- Background Pattern/Image -->
        <div class="absolute inset-0 opacity-10">
            <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=\'60\' height=\'60\' viewBox=\'0 0 60 60\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cg fill=\'none\' fill-rule=\'evenodd\'%3E%3Cg fill=\'%23ffffff\' fill-opacity=\'0.4\'%3E%3Cpath d=\'M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
        </div>
        
        <!-- Hero Content -->
        <div class="relative px-6 pt-12 pb-20 text-center">
            <!-- Badge -->
            <div class="inline-flex items-center gap-2 px-3 py-1.5 mb-6 bg-white/10 backdrop-blur-sm rounded-full border border-white/20">
                <span class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></span>
                <span class="text-xs font-medium text-white/90">Now Live in Pakistan</span>
            </div>
            
            <!-- Headline -->
            <h1 class="text-3xl sm:text-4xl font-extrabold text-white leading-tight mb-3">
                Upgrade Your<br/>Game
            </h1>
            
            <!-- Subheadline -->
            <p class="text-base text-white/80 max-w-xs mx-auto mb-8">
                Pakistan's Premier Marketplace for Badminton Gear
            </p>
            
            <!-- CTA Buttons -->
            <div class="flex flex-col sm:flex-row items-center justify-center gap-3">
                <a href="/products" class="w-full sm:w-auto inline-flex items-center justify-center gap-2 px-6 py-3 bg-white text-olive-700 font-semibold rounded-xl shadow-lg hover:bg-stone-50 active:scale-95 transition-all">
                    <i data-lucide="shopping-bag" class="w-5 h-5"></i>
                    Shop Now
                </a>
                <a href="https://wa.me/923001234567?text=Hi!%20I%20want%20to%20sell%20my%20badminton%20gear" target="_blank" rel="noopener" class="w-full sm:w-auto inline-flex items-center justify-center gap-2 px-6 py-3 bg-transparent text-white font-semibold rounded-xl border-2 border-white/40 hover:bg-white/10 active:scale-95 transition-all">
                    <i data-lucide="message-circle" class="w-5 h-5"></i>
                    Sell Gear
                </a>
            </div>
        </div>
        
        <!-- Bottom Curve -->
        <div class="absolute bottom-0 left-0 right-0 h-6 bg-surface-bg rounded-t-[2rem]"></div>
    </section>

    <!-- ========== 3. FLOATING SEARCH BAR ========== -->
    <div class="relative z-10 px-4 -mt-8">
        <div class="bg-white rounded-2xl shadow-float p-1">
            <div class="flex items-center gap-3 px-4 py-3">
                <i data-lucide="search" class="w-5 h-5 text-stone-400 flex-shrink-0"></i>
                <input 
                    type="text" 
                    placeholder="Search rackets, shoes, shuttles..." 
                    class="flex-1 text-sm text-stone-700 placeholder:text-stone-400 bg-transparent outline-none"
                >
                <button class="p-2 bg-olive-700 rounded-xl hover:bg-olive-800 active:scale-95 transition-all">
                    <i data-lucide="sliders-horizontal" class="w-4 h-4 text-white"></i>
                </button>
            </div>
        </div>
    </div>

    <!-- ========== 4. CATEGORY PILLS ========== -->
    <section class="mt-6 px-4">
        <div class="flex gap-3 overflow-x-auto scrollbar-hide pb-2 -mx-4 px-4">
            <!-- Rackets -->
            <a href="/products?category=rackets" class="category-pill flex flex-col items-center gap-2 min-w-[72px] p-3 bg-white rounded-2xl shadow-card hover:shadow-card-hover transition-all">
                <div class="w-12 h-12 flex items-center justify-center bg-olive-50 rounded-xl">
                    <i data-lucide="swords" class="w-6 h-6 text-olive-700"></i>
                </div>
                <span class="text-xs font-medium text-stone-700">Rackets</span>
            </a>
            
            <!-- Shoes -->
            <a href="/products?category=shoes" class="category-pill flex flex-col items-center gap-2 min-w-[72px] p-3 bg-white rounded-2xl shadow-card hover:shadow-card-hover transition-all">
                <div class="w-12 h-12 flex items-center justify-center bg-olive-50 rounded-xl">
                    <i data-lucide="footprints" class="w-6 h-6 text-olive-700"></i>
                </div>
                <span class="text-xs font-medium text-stone-700">Shoes</span>
            </a>
            
            <!-- Kitbags -->
            <a href="/products?category=bags" class="category-pill flex flex-col items-center gap-2 min-w-[72px] p-3 bg-white rounded-2xl shadow-card hover:shadow-card-hover transition-all">
                <div class="w-12 h-12 flex items-center justify-center bg-olive-50 rounded-xl">
                    <i data-lucide="briefcase" class="w-6 h-6 text-olive-700"></i>
                </div>
                <span class="text-xs font-medium text-stone-700">Kitbags</span>
            </a>
            
            <!-- Apparel -->
            <a href="/products?category=apparel" class="category-pill flex flex-col items-center gap-2 min-w-[72px] p-3 bg-white rounded-2xl shadow-card hover:shadow-card-hover transition-all">
                <div class="w-12 h-12 flex items-center justify-center bg-olive-50 rounded-xl">
                    <i data-lucide="shirt" class="w-6 h-6 text-olive-700"></i>
                </div>
                <span class="text-xs font-medium text-stone-700">Apparel</span>
            </a>
            
            <!-- Accessories -->
            <a href="/products?category=accessories" class="category-pill flex flex-col items-center gap-2 min-w-[72px] p-3 bg-white rounded-2xl shadow-card hover:shadow-card-hover transition-all">
                <div class="w-12 h-12 flex items-center justify-center bg-olive-50 rounded-xl">
                    <i data-lucide="puzzle" class="w-6 h-6 text-olive-700"></i>
                </div>
                <span class="text-xs font-medium text-stone-700">Extras</span>
            </a>
            
            <!-- Shuttles -->
            <a href="/products?category=shuttles" class="category-pill flex flex-col items-center gap-2 min-w-[72px] p-3 bg-white rounded-2xl shadow-card hover:shadow-card-hover transition-all">
                <div class="w-12 h-12 flex items-center justify-center bg-olive-50 rounded-xl">
                    <i data-lucide="circle-dot" class="w-6 h-6 text-olive-700"></i>
                </div>
                <span class="text-xs font-medium text-stone-700">Shuttles</span>
            </a>
        </div>
    </section>

    <!-- ========== 5. FRESH DROPS - PRODUCT GRID ========== -->
    <section class="mt-8 px-4">
        <!-- Section Header -->
        <div class="flex items-center justify-between mb-4">
            <div>
                <h2 class="text-lg font-bold text-brand-dark">Just In</h2>
                <p class="text-sm text-stone-500">Fresh drops from our sellers</p>
            </div>
            <a href="/products" class="text-sm font-medium text-olive-700 hover:text-olive-800">
                View All →
            </a>
        </div>
        
        <!-- Product Grid (2 columns) -->
        <div class="grid grid-cols-2 gap-3">
            
            <% if (typeof featuredProducts !== 'undefined' && featuredProducts && featuredProducts.length > 0) { %>
                <% featuredProducts.slice(0, 6).forEach((product, index) => { %>
                <!-- Dynamic Product Card -->
                <a href="/product/<%= product._id %>" class="product-card-new block bg-white rounded-2xl shadow-card overflow-hidden hover:shadow-card-hover transition-all">
                    <!-- Image Container -->
                    <div class="relative aspect-square bg-stone-100">
                        <% if (product.images && product.images.length > 0) { %>
                        <img src="<%= product.images[0] %>" alt="<%= product.name %>" class="w-full h-full object-cover">
                        <% } else { %>
                        <div class="w-full h-full flex items-center justify-center">
                            <i data-lucide="image" class="w-12 h-12 text-stone-300"></i>
                        </div>
                        <% } %>
                        <!-- Badge -->
                        <span class="absolute top-2 left-2 px-2 py-0.5 text-xxs font-semibold rounded-md <%= product.condition === 'new' ? 'bg-green-100 text-green-700' : 'bg-amber-100 text-amber-700' %>">
                            <%= product.condition === 'new' ? 'New' : 'Used ' + (product.conditionRating || '9') + '/10' %>
                        </span>
                    </div>
                    <!-- Product Info -->
                    <div class="p-3">
                        <h3 class="text-sm font-medium text-stone-800 truncate"><%= product.name %></h3>
                        <p class="text-base font-bold text-brand-dark mt-1">Rs. <%= product.price ? product.price.toLocaleString() : '0' %></p>
                        <% if (product.specs) { %>
                        <p class="text-xxs text-stone-500 mt-1"><%= product.specs %></p>
                        <% } %>
                    </div>
                </a>
                <% }) %>
            <% } else { %>
            
            <!-- Static Demo Product Cards (when no products in DB) -->
            
            <!-- Product 1 -->
            <a href="/products" class="product-card-new block bg-white rounded-2xl shadow-card overflow-hidden hover:shadow-card-hover transition-all">
                <div class="relative aspect-square bg-stone-100">
                    <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-stone-100 to-stone-200">
                        <i data-lucide="swords" class="w-16 h-16 text-stone-300"></i>
                    </div>
                    <span class="absolute top-2 left-2 px-2 py-0.5 text-xxs font-semibold bg-amber-100 text-amber-700 rounded-md">Used 9/10</span>
                </div>
                <div class="p-3">
                    <h3 class="text-sm font-medium text-stone-800 truncate">Yonex Astrox 77 Pro...</h3>
                    <p class="text-base font-bold text-brand-dark mt-1">Rs. 24,500</p>
                    <p class="text-xxs text-stone-500 mt-1">4U G5 • Unstrung</p>
                </div>
            </a>
            
            <!-- Product 2 -->
            <a href="/products" class="product-card-new block bg-white rounded-2xl shadow-card overflow-hidden hover:shadow-card-hover transition-all">
                <div class="relative aspect-square bg-stone-100">
                    <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-stone-100 to-stone-200">
                        <i data-lucide="footprints" class="w-16 h-16 text-stone-300"></i>
                    </div>
                    <span class="absolute top-2 left-2 px-2 py-0.5 text-xxs font-semibold bg-green-100 text-green-700 rounded-md">New</span>
                </div>
                <div class="p-3">
                    <h3 class="text-sm font-medium text-stone-800 truncate">Victor A960 Court...</h3>
                    <p class="text-base font-bold text-brand-dark mt-1">Rs. 18,900</p>
                    <p class="text-xxs text-stone-500 mt-1">Size 42 • White/Blue</p>
                </div>
            </a>
            
            <!-- Product 3 -->
            <a href="/products" class="product-card-new block bg-white rounded-2xl shadow-card overflow-hidden hover:shadow-card-hover transition-all">
                <div class="relative aspect-square bg-stone-100">
                    <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-stone-100 to-stone-200">
                        <i data-lucide="swords" class="w-16 h-16 text-stone-300"></i>
                    </div>
                    <span class="absolute top-2 left-2 px-2 py-0.5 text-xxs font-semibold bg-green-100 text-green-700 rounded-md">New</span>
                </div>
                <div class="p-3">
                    <h3 class="text-sm font-medium text-stone-800 truncate">Li-Ning Axforce 80...</h3>
                    <p class="text-base font-bold text-brand-dark mt-1">Rs. 32,000</p>
                    <p class="text-xxs text-stone-500 mt-1">3U G5 • Strung</p>
                </div>
            </a>
            
            <!-- Product 4 -->
            <a href="/products" class="product-card-new block bg-white rounded-2xl shadow-card overflow-hidden hover:shadow-card-hover transition-all">
                <div class="relative aspect-square bg-stone-100">
                    <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-stone-100 to-stone-200">
                        <i data-lucide="briefcase" class="w-16 h-16 text-stone-300"></i>
                    </div>
                    <span class="absolute top-2 left-2 px-2 py-0.5 text-xxs font-semibold bg-amber-100 text-amber-700 rounded-md">Used 8/10</span>
                </div>
                <div class="p-3">
                    <h3 class="text-sm font-medium text-stone-800 truncate">Yonex Pro Racquet...</h3>
                    <p class="text-base font-bold text-brand-dark mt-1">Rs. 8,500</p>
                    <p class="text-xxs text-stone-500 mt-1">6 Racket • Navy Blue</p>
                </div>
            </a>
            
            <% } %>
        </div>
    </section>

    <!-- ========== 6. SELLER CTA BANNER (WhatsApp Hook) ========== -->
    <section class="mt-10 mx-4">
        <div class="relative bg-gradient-to-br from-brand-light/30 to-olive-100 rounded-3xl p-6 overflow-hidden">
            <!-- Background decoration -->
            <div class="absolute top-0 right-0 w-32 h-32 bg-olive-200/30 rounded-full -translate-y-1/2 translate-x-1/2"></div>
            <div class="absolute bottom-0 left-0 w-24 h-24 bg-olive-200/20 rounded-full translate-y-1/2 -translate-x-1/2"></div>
            
            <!-- Content -->
            <div class="relative">
                <!-- Icon -->
                <div class="inline-flex items-center gap-2 mb-4">
                    <div class="w-10 h-10 flex items-center justify-center bg-white rounded-xl shadow-sm">
                        <i data-lucide="camera" class="w-5 h-5 text-olive-700"></i>
                    </div>
                    <div class="w-10 h-10 flex items-center justify-center bg-green-500 rounded-xl shadow-sm">
                        <i data-lucide="message-circle" class="w-5 h-5 text-white"></i>
                    </div>
                </div>
                
                <!-- Text -->
                <h3 class="text-lg font-bold text-brand-dark mb-2">
                    Got a racket gathering dust?
                </h3>
                <p class="text-sm text-stone-600 mb-5">
                    Sell it in 30 seconds via WhatsApp. Take a photo, send it, and we'll list it for you!
                </p>
                
                <!-- CTA Button -->
                <a 
                    href="https://wa.me/923001234567?text=Hi!%20I%20want%20to%20sell%20my%20badminton%20gear.%20Here's%20a%20photo:" 
                    target="_blank" 
                    rel="noopener" 
                    class="inline-flex items-center gap-2 px-5 py-3 bg-green-500 text-white font-semibold rounded-xl shadow-lg hover:bg-green-600 active:scale-95 transition-all"
                >
                    <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                    </svg>
                    Start Selling
                </a>
            </div>
        </div>
    </section>

    <!-- ========== FEATURED SELLERS (if available) ========== -->
    <% if (typeof featuredSellers !== 'undefined' && featuredSellers && featuredSellers.length > 0) { %>
    <section class="mt-10 px-4">
        <div class="flex items-center justify-between mb-4">
            <div>
                <h2 class="text-lg font-bold text-brand-dark">Top Sellers</h2>
                <p class="text-sm text-stone-500">Trusted stores on RacketBazaar</p>
            </div>
            <a href="/stores" class="text-sm font-medium text-olive-700 hover:text-olive-800">
                View All →
            </a>
        </div>
        
        <div class="flex gap-3 overflow-x-auto scrollbar-hide pb-2 -mx-4 px-4">
            <% featuredSellers.forEach(seller => { %>
            <a href="/store/<%= seller._id %>" class="flex-shrink-0 w-36 bg-white rounded-2xl shadow-card p-4 text-center hover:shadow-card-hover transition-all">
                <div class="w-14 h-14 mx-auto mb-3 flex items-center justify-center bg-olive-100 rounded-full">
                    <span class="text-xl font-bold text-olive-700"><%= seller.storeName.charAt(0).toUpperCase() %></span>
                </div>
                <h3 class="text-sm font-semibold text-stone-800 truncate"><%= seller.storeName %></h3>
                <p class="text-xs text-stone-500 mt-1"><%= seller.productCount || 0 %> Products</p>
            </a>
            <% }) %>
        </div>
    </section>
    <% } %>

    <!-- ========== 7. TRUST FOOTER ========== -->
