        <!-- Trust Badges -->
        <div class="bg-white rounded-2xl shadow-card p-5">
            <div class="grid grid-cols-3 gap-4">
                <!-- Verified Sellers -->
                <div class="text-center">
                    <div class="w-10 h-10 mx-auto mb-2 flex items-center justify-center bg-olive-50 rounded-full">
                        <i data-lucide="badge-check" class="w-5 h-5 text-olive-700"></i>
                    </div>
                    <p class="text-xs font-medium text-stone-700">Verified<br/>Sellers</p>
                </div>
                
                <!-- Nationwide Delivery -->
                <div class="text-center">
                    <div class="w-10 h-10 mx-auto mb-2 flex items-center justify-center bg-olive-50 rounded-full">
                        <i data-lucide="truck" class="w-5 h-5 text-olive-700"></i>
                    </div>
                    <p class="text-xs font-medium text-stone-700">Nationwide<br/>Delivery</p>
                </div>
                
                <!-- 3-Day Check -->
                <div class="text-center">
                    <div class="w-10 h-10 mx-auto mb-2 flex items-center justify-center bg-olive-50 rounded-full">
                        <i data-lucide="shield-check" class="w-5 h-5 text-olive-700"></i>
                    </div>
                    <p class="text-xs font-medium text-stone-700">3-Day<br/>Check</p>
                </div>
            </div>
        </div>
        
        <!-- Footer Links -->
        <div class="mt-6 text-center">
            <div class="flex items-center justify-center gap-4 mb-4">
