<%- include('partials/head') %>

<div class="products-page">
    <!-- Add this overlay before the aside -->
    <div class="filters-overlay"></div>
    <aside class="filters">
        <!-- Replace the original h3 with this header -->
        <div class="filters-header">
            <h3>Filters</h3>
            <button class="filters-close-btn" aria-label="Close filters">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
            </button>
        </div>
        <form action="/products" method="GET" id="filter-form">
            <% if (search) { %>
                <input type="hidden" name="search" value="<%= search %>">
            <% } %>
            
            <div class="filter-group">
                <h4>Category</h4>
                <label>
                    <input type="radio" name="category" value="" <%= !category ? 'checked' : '' %>> All
                </label>
                <label>
                    <input type="radio" name="category" value="rackets" <%= category === 'rackets' ? 'checked' : '' %>> Rackets
                </label>
                <label>
                    <input type="radio" name="category" value="shoes" <%= category === 'shoes' ? 'checked' : '' %>> Shoes
                </label>
                <label>
                    <input type="radio" name="category" value="accessories" <%= category === 'accessories' ? 'checked' : '' %>> Accessories
                </label>
            </div>
            
            <div class="filter-group">
                <h4>Brand</h4>
                <% brands.forEach(b => { %>
                    <label>
                        <input type="checkbox" name="brand" value="<%= b %>" <%= selectedBrands.includes(b) ? 'checked' : '' %>> <%= b %>
                    </label>
                <% }) %>
            </div>
            
            <div class="filter-group">
                <h4>Price Range</h4>
                <label>
                    <input type="number" name="minPrice" placeholder="Min" value="<%= minPrice || '' %>" class="price-input">
                </label>
                <span>to</span>
                <label>
                    <input type="number" name="maxPrice" placeholder="Max" value="<%= maxPrice || '' %>" class="price-input">
                </label>
            </div>
            
            <div class="filter-group">
                <h4>Sort By</h4>
                <select name="sort">
                    <option value="" <%= !sort ? 'selected' : '' %>>Default</option>
                    <option value="price_asc" <%= sort === 'price_asc' ? 'selected' : '' %>>Price: Low to High</option>
                    <option value="price_desc" <%= sort === 'price_desc' ? 'selected' : '' %>>Price: High to Low</option>
                    <option value="name_asc" <%= sort === 'name_asc' ? 'selected' : '' %>>Name: A to Z</option>
                    <option value="name_desc" <%= sort === 'name_desc' ? 'selected' : '' %>>Name: Z to A</option>
                </select>
            </div>
            
            <button type="submit" class="btn btn-primary">Apply Filters</button>
            <a href="/products" class="btn btn-outline">Clear All</a>
        </form>
    </aside>
    
    <section class="products-section">
        <div class="products-header">
            <div class="products-header-top">
                <!-- Filter button for mobile -->
                <button class="btn btn-outline" id="filter-toggle-btn">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3"></polygon></svg>
                    <span>Filters</span>
                </button>
                
                <div class="products-title-section">
                    <h1>
                        <% if (category) { %>
                            <%= category.charAt(0).toUpperCase() + category.slice(1) %>
                        <% } else if (search) { %>
                            Search Results for "<%= search %>"
                        <% } else { %>
                            All Products
                        <% } %>
                    </h1>
                    <p><%= totalProducts %> product<%= totalProducts !== 1 ? 's' : '' %> found</p>
                </div>
                
                <div class="products-sort">
                    <label for="sort-select">Sort by:</label>
                    <select id="sort-select" onchange="applySortFilter(this.value)">
                        <option value="" <%= !sort ? 'selected' : '' %>>Newest</option>
                        <option value="featured" <%= sort === 'featured' ? 'selected' : '' %>>Featured</option>
                        <option value="name_asc" <%= sort === 'name_asc' ? 'selected' : '' %>>Name: A-Z</option>
                        <option value="name_desc" <%= sort === 'name_desc' ? 'selected' : '' %>>Name: Z-A</option>
                        <option value="price_asc" <%= sort === 'price_asc' ? 'selected' : '' %>>Price: Low to High</option>
                        <option value="price_desc" <%= sort === 'price_desc' ? 'selected' : '' %>>Price: High to Low</option>
                    </select>
                </div>
            </div>
        </div>
        
        <% if (products.length > 0) { %>
            <div class="products-grid">
                <% products.forEach(product => { %>
                    <%- include('partials/product-card', { product }) %>
                <% }) %>
            </div>
            
            <% if (totalPages > 1) { %>
            <nav class="pagination">
                <div class="pagination-info">
                    Showing <%= (currentPage - 1) * perPage + 1 %>-<%= Math.min(currentPage * perPage, totalProducts) %> of <%= totalProducts %> products
                </div>
                <div class="pagination-controls">
                    <% if (currentPage > 1) { %>
                        <a href="<%= buildPaginationUrl(1) %>" class="pagination-btn" title="First page">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="11 17 6 12 11 7"></polyline><polyline points="18 17 13 12 18 7"></polyline></svg>
                        </a>
                        <a href="<%= buildPaginationUrl(currentPage - 1) %>" class="pagination-btn" title="Previous page">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="15 18 9 12 15 6"></polyline></svg>
                        </a>
                    <% } %>
                    
                    <div class="pagination-pages">
                        <% 
                        let startPage = Math.max(1, currentPage - 2);
                        let endPage = Math.min(totalPages, currentPage + 2);
                        
                        if (startPage > 1) { %>
                            <a href="<%= buildPaginationUrl(1) %>" class="pagination-page">1</a>
                            <% if (startPage > 2) { %>
                                <span class="pagination-ellipsis">...</span>
                            <% } %>
                        <% }
                        
                        for (let i = startPage; i <= endPage; i++) { %>
                            <a href="<%= buildPaginationUrl(i) %>" class="pagination-page <%= i === currentPage ? 'active' : '' %>"><%= i %></a>
                        <% }
                        
                        if (endPage < totalPages) { %>
                            <% if (endPage < totalPages - 1) { %>
                                <span class="pagination-ellipsis">...</span>
                            <% } %>
                            <a href="<%= buildPaginationUrl(totalPages) %>" class="pagination-page"><%= totalPages %></a>
                        <% } %>
                    </div>
                    
                    <% if (currentPage < totalPages) { %>
                        <a href="<%= buildPaginationUrl(currentPage + 1) %>" class="pagination-btn" title="Next page">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"></polyline></svg>
                        </a>
                        <a href="<%= buildPaginationUrl(totalPages) %>" class="pagination-btn" title="Last page">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="13 17 18 12 13 7"></polyline><polyline points="6 17 11 12 6 7"></polyline></svg>
                        </a>
                    <% } %>
                </div>
            </nav>
            <% } %>
        <% } else { %>
            <div class="no-products">
                <p>No products found matching your criteria.</p>
                <a href="/products" class="btn btn-primary">View All Products</a>
            </div>
        <% } %>
    </section>
</div>

<script>
    function applySortFilter(sortValue) {
        const url = new URL(window.location.href);
        if (sortValue) {
            url.searchParams.set('sort', sortValue);
        } else {
            url.searchParams.delete('sort');
        }
        window.location.href = url.toString();
    }
</script>

<%- include('partials/tail') %>
