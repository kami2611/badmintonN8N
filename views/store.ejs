<%- include('partials/head', { pageClass: 'page-home' }) %>

<!-- ================================ -->
<!-- INDIVIDUAL STORE PAGE            -->
<!-- RacketBazaar - Premium Store View -->
<!-- ================================ -->

<div class="min-h-screen bg-surface-bg font-sans">

    <!-- ========== STICKY HEADER ========== -->
    <header class="sticky top-0 z-50 bg-white/95 backdrop-blur-md border-b border-stone-100">
        <div class="flex items-center justify-between px-4 py-3">
            <!-- Left: Back Button -->
            <a href="/stores" class="p-2 -ml-2 rounded-lg hover:bg-stone-100 active:bg-stone-200 transition-colors" aria-label="Back to stores">
                <i data-lucide="arrow-left" class="w-6 h-6 text-brand-dark"></i>
            </a>
            
            <!-- Center: Store Name -->
            <h1 class="text-lg font-bold text-brand-dark truncate max-w-[200px]"><%= seller.storeName %></h1>
            
            <!-- Right: Share -->
            <button id="share-btn" class="p-2 -mr-2 rounded-lg hover:bg-stone-100 active:bg-stone-200 transition-colors" aria-label="Share store">
                <i data-lucide="share-2" class="w-5 h-5 text-brand-dark"></i>
            </button>
        </div>
    </header>

    <!-- ========== STORE HERO ========== -->
    <section class="relative">
        <!-- Hero Background -->
        <div class="h-32 bg-gradient-to-br from-olive-600 via-olive-500 to-olive-700 relative overflow-hidden">
            <!-- Pattern Overlay -->
            <div class="absolute inset-0 opacity-10">
                <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=\'60\' height=\'60\' viewBox=\'0 0 60 60\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cg fill=\'none\' fill-rule=\'evenodd\'%3E%3Cg fill=\'%23ffffff\' fill-opacity=\'0.4\'%3E%3Cpath d=\'M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
            </div>
        </div>
        
        <!-- Store Profile Card -->
        <div class="relative -mt-16 mx-4">
            <div class="bg-white rounded-2xl shadow-card p-5">
                <div class="flex items-start gap-4">
                    <!-- Store Avatar -->
                    <div class="flex-shrink-0 w-20 h-20 flex items-center justify-center bg-gradient-to-br from-olive-100 to-olive-200 rounded-2xl shadow-sm border-4 border-white -mt-10">
                        <span class="text-3xl font-bold text-olive-700"><%= seller.storeName.charAt(0).toUpperCase() %></span>
                    </div>
                    
                    <!-- Store Info -->
                    <div class="flex-1 min-w-0">
                        <div class="flex items-center gap-2 mb-1">
                            <h2 class="text-lg font-bold text-brand-dark truncate"><%= seller.storeName %></h2>
                            <% if (seller.featured) { %>
                            <span class="flex-shrink-0 px-2 py-0.5 bg-amber-100 rounded-md text-xxs font-semibold text-amber-700">‚≠ê Featured</span>
                            <% } %>
                        </div>
                        <p class="text-sm text-stone-500">by <%= seller.name %></p>
                        
                        <!-- Verified Badge -->
                        <div class="inline-flex items-center gap-1 mt-2 px-2 py-1 bg-green-50 rounded-full">
                            <i data-lucide="badge-check" class="w-3.5 h-3.5 text-green-600"></i>
                            <span class="text-xs font-medium text-green-700">Verified Seller</span>
                        </div>
                    </div>
                </div>
                
                <!-- Stats Grid -->
                <div class="grid grid-cols-3 gap-4 mt-5 pt-5 border-t border-stone-100">
                    <div class="text-center">
                        <p class="text-xl font-bold text-brand-dark"><%= stats.totalProducts %></p>
                        <p class="text-xs text-stone-500 mt-0.5">Products</p>
                    </div>
                    <div class="text-center border-x border-stone-100">
                        <p class="text-xl font-bold text-brand-dark"><%= new Date().getFullYear() - new Date(seller.createdAt).getFullYear() || '< 1' %></p>
                        <p class="text-xs text-stone-500 mt-0.5">Years Active</p>
                    </div>
                    <div class="text-center">
                        <p class="text-xl font-bold text-green-600">100%</p>
                        <p class="text-xs text-stone-500 mt-0.5">Authentic</p>
                    </div>
                </div>
                
                <!-- Contact Button -->
                <% if (seller.phone) { %>
                <a href="https://wa.me/<%= seller.phone.replace(/[^0-9]/g, '') %>?text=Hi!%20I'm%20interested%20in%20your%20products%20on%20RacketBazaar" target="_blank" rel="noopener" class="flex items-center justify-center gap-2 w-full mt-5 px-4 py-3 bg-green-500 text-white font-semibold rounded-xl shadow-sm hover:bg-green-600 active:scale-[0.98] transition-all">
                    <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                    </svg>
                    Contact on WhatsApp
                </a>
                <% } %>
            </div>
        </div>
    </section>

    <!-- ========== CATEGORY TABS ========== -->
    <section class="mt-6 px-4">
        <div class="flex gap-2 overflow-x-auto scrollbar-hide pb-2 -mx-4 px-4">
            <a href="/store/<%= seller._id %>" class="flex-shrink-0 px-4 py-2 rounded-xl text-sm font-medium transition-all <%= !category ? 'bg-olive-700 text-white shadow-sm' : 'bg-white text-stone-600 shadow-card hover:bg-stone-50' %>">
                All (<%= stats.totalProducts %>)
            </a>
            <% if (stats.rackets > 0) { %>
            <a href="/store/<%= seller._id %>?category=rackets" class="flex-shrink-0 px-4 py-2 rounded-xl text-sm font-medium transition-all <%= category === 'rackets' ? 'bg-olive-700 text-white shadow-sm' : 'bg-white text-stone-600 shadow-card hover:bg-stone-50' %>">
                <span class="mr-1">üè∏</span> Rackets (<%= stats.rackets %>)
            </a>
            <% } %>
            <% if (stats.shoes > 0) { %>
            <a href="/store/<%= seller._id %>?category=shoes" class="flex-shrink-0 px-4 py-2 rounded-xl text-sm font-medium transition-all <%= category === 'shoes' ? 'bg-olive-700 text-white shadow-sm' : 'bg-white text-stone-600 shadow-card hover:bg-stone-50' %>">
                <span class="mr-1">üëü</span> Shoes (<%= stats.shoes %>)
            </a>
            <% } %>
            <% if (stats.accessories > 0) { %>
            <a href="/store/<%= seller._id %>?category=accessories" class="flex-shrink-0 px-4 py-2 rounded-xl text-sm font-medium transition-all <%= category === 'accessories' ? 'bg-olive-700 text-white shadow-sm' : 'bg-white text-stone-600 shadow-card hover:bg-stone-50' %>">
                <span class="mr-1">üéí</span> Accessories (<%= stats.accessories %>)
            </a>
            <% } %>
        </div>
    </section>

    <!-- ========== PRODUCTS SECTION ========== -->
    <section class="mt-4 px-4 pb-6">
        <!-- Sort Bar -->
        <div class="flex items-center justify-between mb-4">
            <p class="text-sm text-stone-500">
                <span class="font-medium text-stone-700"><%= products.length %></span> products
            </p>
            
            <div class="relative">
                <button id="sort-toggle" class="flex items-center gap-2 px-3 py-2 bg-white rounded-xl shadow-card text-sm font-medium text-stone-700 hover:shadow-card-hover transition-all">
                    <i data-lucide="arrow-up-down" class="w-4 h-4 text-stone-400"></i>
                    Sort
                </button>
                
                <div id="sort-menu" class="hidden absolute right-0 top-full mt-2 w-44 bg-white rounded-xl shadow-float border border-stone-100 py-2 z-20">
                    <a href="/store/<%= seller._id %>?<%= category ? 'category=' + category + '&' : '' %>sort=" class="block px-4 py-2 text-sm <%= !sort ? 'text-olive-700 bg-olive-50 font-medium' : 'text-stone-600 hover:bg-stone-50' %>">
                        Newest
                    </a>
                    <a href="/store/<%= seller._id %>?<%= category ? 'category=' + category + '&' : '' %>sort=price_asc" class="block px-4 py-2 text-sm <%= sort === 'price_asc' ? 'text-olive-700 bg-olive-50 font-medium' : 'text-stone-600 hover:bg-stone-50' %>">
                        Price: Low to High
                    </a>
                    <a href="/store/<%= seller._id %>?<%= category ? 'category=' + category + '&' : '' %>sort=price_desc" class="block px-4 py-2 text-sm <%= sort === 'price_desc' ? 'text-olive-700 bg-olive-50 font-medium' : 'text-stone-600 hover:bg-stone-50' %>">
                        Price: High to Low
                    </a>
                    <a href="/store/<%= seller._id %>?<%= category ? 'category=' + category + '&' : '' %>sort=name_asc" class="block px-4 py-2 text-sm <%= sort === 'name_asc' ? 'text-olive-700 bg-olive-50 font-medium' : 'text-stone-600 hover:bg-stone-50' %>">
                        Name: A-Z
                    </a>
                </div>
            </div>
        </div>
        
        <!-- Products Grid -->
        <% if (products.length > 0) { %>
        <div class="grid grid-cols-2 gap-3">
            <% products.forEach(product => { %>
            <a href="/product/<%= product._id %>" class="product-card-new block bg-white rounded-2xl shadow-card overflow-hidden hover:shadow-card-hover transition-all">
                <!-- Image Container -->
                <div class="relative aspect-square bg-stone-100">
                    <% if (product.images && product.images.length > 0) { %>
                    <img src="<%= product.images[0] %>" alt="<%= product.name %>" class="w-full h-full object-cover">
                    <% } else { %>
                    <div class="w-full h-full flex items-center justify-center">
                        <i data-lucide="image" class="w-12 h-12 text-stone-300"></i>
                    </div>
                    <% } %>
                    
                    <!-- Condition Badge -->
                    <span class="absolute top-2 left-2 px-2 py-0.5 text-xxs font-semibold rounded-md <%= product.condition === 'new' ? 'bg-green-100 text-green-700' : 'bg-amber-100 text-amber-700' %>">
                        <%= product.condition === 'new' ? 'New' : 'Used ' + (product.conditionRating || '9') + '/10' %>
                    </span>
                    
                    <!-- Featured Badge -->
                    <% if (product.featured) { %>
                    <span class="absolute top-2 right-2 px-2 py-0.5 text-xxs font-semibold bg-amber-400 text-amber-900 rounded-md">‚≠ê</span>
                    <% } %>
                </div>
                
                <!-- Product Info -->
                <div class="p-3">
                    <h3 class="text-sm font-medium text-stone-800 truncate"><%= product.name %></h3>
                    <p class="text-base font-bold text-brand-dark mt-1">Rs. <%= product.price ? product.price.toLocaleString() : '0' %></p>
                    <% if (product.specs) { %>
                    <p class="text-xxs text-stone-500 mt-1 truncate"><%= product.specs %></p>
                    <% } %>
                </div>
            </a>
            <% }) %>
        </div>
        <% } else { %>
        <!-- Empty State -->
        <div class="text-center py-12">
            <div class="w-20 h-20 mx-auto mb-4 flex items-center justify-center bg-stone-100 rounded-full">
                <i data-lucide="package" class="w-10 h-10 text-stone-400"></i>
            </div>
            <h3 class="text-lg font-semibold text-stone-700 mb-2">No products found</h3>
            <p class="text-sm text-stone-500 mb-6">
                <% if (category) { %>
                    This store doesn't have any <%= category %> yet.
                <% } else { %>
                    This store doesn't have any products yet.
                <% } %>
            </p>
            <% if (category) { %>
            <a href="/store/<%= seller._id %>" class="inline-flex items-center gap-2 px-5 py-2.5 bg-olive-700 text-white font-medium rounded-xl hover:bg-olive-800 transition-colors">
                View All Products
            </a>
            <% } else { %>
            <a href="/products" class="inline-flex items-center gap-2 px-5 py-2.5 bg-olive-700 text-white font-medium rounded-xl hover:bg-olive-800 transition-colors">
                Browse All Products
            </a>
            <% } %>
        </div>
        <% } %>
    </section>

    <!-- ========== EXPLORE MORE STORES ========== -->
    <section class="px-4 pb-8">
        <div class="bg-gradient-to-br from-stone-100 to-stone-50 rounded-2xl p-5 text-center">
            <i data-lucide="store" class="w-8 h-8 mx-auto mb-3 text-olive-600"></i>
            <h3 class="text-base font-bold text-brand-dark mb-2">Explore More Stores</h3>
            <p class="text-sm text-stone-600 mb-4">Discover other verified sellers on RacketBazaar</p>
            <a href="/stores" class="inline-flex items-center gap-2 px-5 py-2.5 bg-olive-700 text-white font-medium rounded-xl hover:bg-olive-800 transition-colors">
                <i data-lucide="grid-3x3" class="w-4 h-4"></i>
                View All Stores
            </a>
        </div>
    </section>

    <!-- ========== FOOTER ========== -->
    <footer class="px-4 pb-6 text-center">
        <div class="flex items-center justify-center gap-4 mb-3">
            <a href="/" class="text-xs text-stone-500 hover:text-olive-700">Home</a>
            <span class="text-stone-300">‚Ä¢</span>
            <a href="/products" class="text-xs text-stone-500 hover:text-olive-700">Products</a>
            <span class="text-stone-300">‚Ä¢</span>
            <a href="/stores" class="text-xs text-stone-500 hover:text-olive-700">Stores</a>
        </div>
        <p class="text-xs text-stone-400">¬© 2026 RacketBazaar. All rights reserved.</p>
    </footer>

</div>

<!-- ========== SCRIPTS ========== -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Sort dropdown
    const sortToggle = document.getElementById('sort-toggle');
    const sortMenu = document.getElementById('sort-menu');
    
    if (sortToggle && sortMenu) {
        sortToggle.addEventListener('click', (e) => {
            e.stopPropagation();
            sortMenu.classList.toggle('hidden');
        });
        
        document.addEventListener('click', () => {
            sortMenu.classList.add('hidden');
        });
    }
    
    // Share button
    const shareBtn = document.getElementById('share-btn');
    if (shareBtn && navigator.share) {
        shareBtn.addEventListener('click', async () => {
            try {
                await navigator.share({
                    title: '<%= seller.storeName %> - RacketBazaar',
                    text: 'Check out this store on RacketBazaar!',
                    url: window.location.href
                });
            } catch (err) {
                console.log('Share cancelled');
            }
        });
    } else if (shareBtn) {
        shareBtn.addEventListener('click', () => {
            navigator.clipboard.writeText(window.location.href);
            alert('Link copied to clipboard!');
        });
    }
    
    // Initialize Lucide icons
    if (typeof lucide !== 'undefined') {
        lucide.createIcons();
    }
});
</script>

