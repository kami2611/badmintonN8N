<!-- Desktop Sidebar - Hidden on mobile (use bottom nav instead) -->
<aside class="hidden md:flex md:flex-col md:fixed md:inset-y-0 md:left-0 md:w-64 bg-olive-950 text-white z-40">
    <!-- Logo -->
    <div class="flex items-center gap-3 px-6 py-5 border-b border-white/10">
        <div class="w-10 h-10 bg-olive-700 rounded-xl flex items-center justify-center">
            <i data-lucide="store" class="w-5 h-5 text-white"></i>
        </div>
        <div>
            <p class="font-semibold text-white">RacketBazaar</p>
            <p class="text-xs text-olive-400">Seller Panel</p>
        </div>
    </div>
    
    <!-- Store Info -->
    <div class="px-6 py-4 border-b border-white/10">
        <p class="text-xs text-olive-400 mb-1">Your Store</p>
        <p class="font-medium text-white truncate"><%= typeof storeName !== 'undefined' ? storeName : 'My Store' %></p>
    </div>
    
    <!-- Navigation -->
    <nav class="flex-1 px-4 py-4 space-y-1 overflow-y-auto">
        <a href="/seller/dashboard" 
            class="flex items-center gap-3 px-4 py-3 rounded-xl transition-colors
            <%= typeof title !== 'undefined' && title === 'Seller Dashboard' ? 'bg-olive-700 text-white' : 'text-olive-300 hover:bg-white/5 hover:text-white' %>">
            <i data-lucide="layout-dashboard" class="w-5 h-5"></i>
            <span class="font-medium">Dashboard</span>
        </a>
        
        <a href="/seller/products" 
            class="flex items-center gap-3 px-4 py-3 rounded-xl transition-colors
            <%= typeof title !== 'undefined' && (title === 'My Products' || title === 'Add Product' || title === 'Edit Product') ? 'bg-olive-700 text-white' : 'text-olive-300 hover:bg-white/5 hover:text-white' %>">
            <i data-lucide="package" class="w-5 h-5"></i>
            <span class="font-medium">Products</span>
        </a>
        
        <a href="/seller/orders" 
            class="flex items-center gap-3 px-4 py-3 rounded-xl transition-colors
            <%= typeof title !== 'undefined' && title === 'My Orders' ? 'bg-olive-700 text-white' : 'text-olive-300 hover:bg-white/5 hover:text-white' %>">
            <i data-lucide="shopping-bag" class="w-5 h-5"></i>
            <span class="font-medium">Orders</span>
        </a>
    </nav>
    
    <!-- Footer Links -->
    <div class="px-4 py-4 border-t border-white/10 space-y-1">
        <a href="/" 
            class="flex items-center gap-3 px-4 py-3 rounded-xl text-olive-300 hover:bg-white/5 hover:text-white transition-colors">
            <i data-lucide="home" class="w-5 h-5"></i>
            <span class="font-medium">Back to Store</span>
        </a>
        
        <a href="/seller/logout" 
            class="flex items-center gap-3 px-4 py-3 rounded-xl text-red-400 hover:bg-red-500/10 hover:text-red-300 transition-colors">
            <i data-lucide="log-out" class="w-5 h-5"></i>
            <span class="font-medium">Logout</span>
        </a>
    </div>
</aside>

<!-- Desktop content offset -->
<div class="hidden md:block md:w-64 flex-shrink-0"></div>
