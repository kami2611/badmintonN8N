<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register as Seller | RacketBazaar</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        olive: {
                            50: '#f7f8f3',
                            100: '#eef0e6',
                            200: '#dde1cc',
                            300: '#c4cba8',
                            400: '#a7b27e',
                            500: '#8a9960',
                            600: '#6b7a4a',
                            700: '#556B2F',
                            800: '#465a28',
                            900: '#3b4c23',
                            950: '#1a2e1a'
                        },
                        brand: {
                            primary: '#556B2F',
                            dark: '#1a2e1a',
                            light: '#8FBC8F',
                            warm: '#FAFAF9'
                        }
                    },
                    fontFamily: {
                        sans: ['Inter', 'system-ui', 'sans-serif']
                    }
                }
            }
        }
    </script>
    <style>
        body {
            font-family: 'Inter', system-ui, sans-serif;
        }
        .signup-bg {
            background: linear-gradient(135deg, #1a2e1a 0%, #556B2F 50%, #8FBC8F 100%);
        }
    </style>
</head>
<body class="min-h-screen signup-bg">
    <!-- Back to Home -->
    <a href="/" class="fixed top-4 left-4 p-2 bg-white/10 hover:bg-white/20 rounded-xl text-white transition-colors z-50">
        <i data-lucide="arrow-left" class="w-5 h-5"></i>
    </a>
    
    <div class="min-h-screen flex items-center justify-center p-4 py-8">
        <div class="w-full max-w-lg">
            <!-- Logo & Title -->
            <div class="text-center mb-6">
                <div class="w-16 h-16 mx-auto bg-white rounded-2xl flex items-center justify-center mb-4 shadow-lg">
                    <i data-lucide="store" class="w-8 h-8 text-olive-700"></i>
                </div>
                <h1 class="text-2xl font-bold text-white mb-2">Become a Seller</h1>
                <p class="text-white/70">Start selling badminton equipment on RacketBazaar</p>
            </div>
            
            <!-- Signup Card -->
            <div class="bg-white rounded-3xl shadow-2xl p-6 md:p-8">
                <% if (error) { %>
                    <div class="mb-6 p-4 bg-red-50 border border-red-100 rounded-xl flex items-start gap-3">
                        <i data-lucide="alert-circle" class="w-5 h-5 text-red-500 mt-0.5 flex-shrink-0"></i>
                        <p class="text-sm text-red-700"><%= error %></p>
                    </div>
                <% } %>
                
                <!-- Benefits -->
                <div class="mb-6 p-4 bg-olive-50 rounded-xl">
                    <div class="flex items-center gap-3 text-sm">
                        <div class="flex -space-x-1">
                            <span class="w-6 h-6 rounded-full bg-olive-200 flex items-center justify-center">
                                <i data-lucide="check" class="w-3 h-3 text-olive-700"></i>
                            </span>
                            <span class="w-6 h-6 rounded-full bg-olive-300 flex items-center justify-center">
                                <i data-lucide="check" class="w-3 h-3 text-olive-700"></i>
                            </span>
                            <span class="w-6 h-6 rounded-full bg-olive-400 flex items-center justify-center">
                                <i data-lucide="check" class="w-3 h-3 text-white"></i>
                            </span>
                        </div>
                        <span class="text-olive-700">Free to register • No commission • Direct WhatsApp orders</span>
                    </div>
                </div>
                
                <form action="/seller/signup" method="POST" class="space-y-4">
                    <!-- Row 1: Name & Store Name -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label for="name" class="block text-sm font-medium text-olive-700 mb-2">Your Name *</label>
                            <div class="relative">
                                <i data-lucide="user" class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-olive-400"></i>
                                <input type="text" id="name" name="name" required
                                    placeholder="Full name"
                                    class="w-full pl-12 pr-4 py-3 border border-olive-200 rounded-xl text-olive-900 placeholder-olive-400 focus:outline-none focus:ring-2 focus:ring-olive-500 focus:border-transparent transition-all">
                            </div>
                        </div>
                        <div>
                            <label for="storeName" class="block text-sm font-medium text-olive-700 mb-2">Store Name *</label>
                            <div class="relative">
                                <i data-lucide="store" class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-olive-400"></i>
                                <input type="text" id="storeName" name="storeName" required
                                    placeholder="Your store name"
                                    class="w-full pl-12 pr-4 py-3 border border-olive-200 rounded-xl text-olive-900 placeholder-olive-400 focus:outline-none focus:ring-2 focus:ring-olive-500 focus:border-transparent transition-all">
                            </div>
                        </div>
                    </div>
                    
                    <!-- Row 2: Phone & Email -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label for="phone" class="block text-sm font-medium text-olive-700 mb-2">Phone Number *</label>
                            <div class="relative">
                                <i data-lucide="phone" class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-olive-400"></i>
                                <input type="tel" id="phone" name="phone" required
                                    placeholder="WhatsApp number"
                                    class="w-full pl-12 pr-4 py-3 border border-olive-200 rounded-xl text-olive-900 placeholder-olive-400 focus:outline-none focus:ring-2 focus:ring-olive-500 focus:border-transparent transition-all">
                            </div>
                            <p class="text-xs text-olive-500 mt-1">Used for customer orders</p>
                        </div>
                        <div>
                            <label for="email" class="block text-sm font-medium text-olive-700 mb-2">Email <span class="text-olive-400">(Optional)</span></label>
                            <div class="relative">
                                <i data-lucide="mail" class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-olive-400"></i>
                                <input type="email" id="email" name="email"
                                    placeholder="Email address"
                                    class="w-full pl-12 pr-4 py-3 border border-olive-200 rounded-xl text-olive-900 placeholder-olive-400 focus:outline-none focus:ring-2 focus:ring-olive-500 focus:border-transparent transition-all">
                            </div>
                        </div>
                    </div>
                    
                    <!-- Row 3: Passwords -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label for="password" class="block text-sm font-medium text-olive-700 mb-2">Password *</label>
                            <div class="relative">
                                <i data-lucide="lock" class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-olive-400"></i>
                                <input type="password" id="password" name="password" required minlength="6"
                                    placeholder="Min 6 characters"
                                    class="w-full pl-12 pr-12 py-3 border border-olive-200 rounded-xl text-olive-900 placeholder-olive-400 focus:outline-none focus:ring-2 focus:ring-olive-500 focus:border-transparent transition-all">
                                <button type="button" onclick="togglePassword('password', 'eyeIcon1')" class="absolute right-4 top-1/2 -translate-y-1/2 text-olive-400 hover:text-olive-600">
                                    <i data-lucide="eye" id="eyeIcon1" class="w-5 h-5"></i>
                                </button>
                            </div>
                        </div>
                        <div>
                            <label for="confirmPassword" class="block text-sm font-medium text-olive-700 mb-2">Confirm Password *</label>
                            <div class="relative">
                                <i data-lucide="lock" class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-olive-400"></i>
                                <input type="password" id="confirmPassword" name="confirmPassword" required minlength="6"
                                    placeholder="Confirm password"
                                    class="w-full pl-12 pr-12 py-3 border border-olive-200 rounded-xl text-olive-900 placeholder-olive-400 focus:outline-none focus:ring-2 focus:ring-olive-500 focus:border-transparent transition-all">
                                <button type="button" onclick="togglePassword('confirmPassword', 'eyeIcon2')" class="absolute right-4 top-1/2 -translate-y-1/2 text-olive-400 hover:text-olive-600">
                                    <i data-lucide="eye" id="eyeIcon2" class="w-5 h-5"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Terms -->
                    <div class="flex items-start gap-3 pt-2">
                        <input type="checkbox" id="terms" name="terms" required
                            class="mt-1 w-4 h-4 rounded border-olive-300 text-olive-700 focus:ring-olive-500">
                        <label for="terms" class="text-sm text-olive-600">
                            I agree to the <a href="#" class="text-olive-700 font-medium hover:underline">Terms of Service</a> 
                            and <a href="#" class="text-olive-700 font-medium hover:underline">Privacy Policy</a>
                        </label>
                    </div>
                    
                    <!-- Submit Button -->
                    <button type="submit" 
                        class="w-full py-4 bg-olive-700 hover:bg-olive-800 text-white font-semibold rounded-xl transition-colors flex items-center justify-center gap-2 shadow-lg shadow-olive-700/25 mt-2">
                        <i data-lucide="rocket" class="w-5 h-5"></i>
                        <span>Create Seller Account</span>
                    </button>
                </form>
                
                <!-- Divider -->
                <div class="relative my-6">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-olive-100"></div>
                    </div>
                    <div class="relative flex justify-center text-xs">
                        <span class="px-4 bg-white text-olive-400">Already have an account?</span>
                    </div>
                </div>
                
                <!-- Login Link -->
                <a href="/seller/login" 
                    class="block w-full py-3.5 border-2 border-olive-200 hover:border-olive-300 text-olive-700 font-medium rounded-xl transition-colors text-center">
                    Login to Dashboard
                </a>
            </div>
            
            <!-- Help Text -->
            <p class="text-center text-white/60 text-sm mt-6">
                Need help? Contact us on 
                <a href="https://wa.me/1234567890" class="text-white hover:underline">WhatsApp</a>
            </p>
        </div>
    </div>
    
    <script>
        lucide.createIcons();
        
        function togglePassword(inputId, iconId) {
            const input = document.getElementById(inputId);
            const icon = document.getElementById(iconId);
            
            if (input.type === 'password') {
                input.type = 'text';
                icon.setAttribute('data-lucide', 'eye-off');
            } else {
                input.type = 'password';
                icon.setAttribute('data-lucide', 'eye');
            }
            lucide.createIcons();
        }
        
        // Password match validation
        document.querySelector('form').addEventListener('submit', function(e) {
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            
            if (password !== confirmPassword) {
                e.preventDefault();
                alert('Passwords do not match!');
            }
        });
    </script>
</body>
</html>
