<!-- Modern Product Card - Tailwind CSS -->
<div class="product-card group bg-white rounded-2xl shadow-sm border border-olive-100 overflow-hidden hover:shadow-lg hover:border-olive-200 transition-all duration-300">
    <!-- Image Container -->
    <a href="/products/<%= product._id %>" class="block relative aspect-square overflow-hidden bg-olive-50">
        <img 
            src="<%= product.images[0] || 'https://placehold.co/400x400/f7f8f3/556B2F?text=No+Image' %>" 
            alt="<%= product.name %>"
            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
            loading="lazy"
        >
        
        <!-- Badges -->
        <div class="absolute top-3 left-3 flex flex-col gap-2">
            <% if (product.condition === 'used') { %>
                <span class="px-2.5 py-1 bg-amber-500 text-white text-xs font-semibold rounded-lg shadow-sm">
                    Pre-owned
                </span>
            <% } %>
            <% if (product.featured) { %>
                <span class="px-2.5 py-1 bg-olive-700 text-white text-xs font-semibold rounded-lg shadow-sm">
                    Featured
                </span>
            <% } %>
            <% if (product.stock > 0 && product.stock <= 3) { %>
                <span class="px-2.5 py-1 bg-red-500 text-white text-xs font-semibold rounded-lg shadow-sm">
                    Only <%= product.stock %> left
                </span>
            <% } %>
        </div>
        
        <!-- Quick Actions (visible on hover) -->
        <div class="absolute bottom-3 right-3 flex gap-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
            <button 
                class="add-to-cart w-10 h-10 bg-white rounded-xl shadow-lg flex items-center justify-center hover:bg-olive-50 active:scale-95 transition-all"
                data-id="<%= product._id %>"
                title="Add to Cart"
            >
                <i data-lucide="shopping-bag" class="w-5 h-5 text-olive-700"></i>
            </button>
        </div>
    </a>
    
    <!-- Product Info -->
    <div class="p-4">
        <!-- Brand -->
        <% if (product.brand) { %>
            <p class="text-xs font-medium text-olive-500 uppercase tracking-wide mb-1"><%= product.brand %></p>
        <% } %>
        
        <!-- Name -->
        <a href="/products/<%= product._id %>" class="block">
            <h3 class="font-semibold text-olive-950 leading-snug line-clamp-2 group-hover:text-olive-700 transition-colors">
                <%= product.name %>
            </h3>
        </a>
        
        <!-- Category Tag -->
        <p class="text-xs text-olive-400 mt-1 capitalize"><%= product.category %></p>
        
        <!-- Price & Cart -->
        <div class="flex items-center justify-between mt-3 pt-3 border-t border-olive-50">
            <div>
                <p class="text-lg font-bold text-olive-900">$<%= product.price.toFixed(2) %></p>
                <% if (product.stock === 0) { %>
                    <p class="text-xs text-red-500 font-medium">Out of Stock</p>
                <% } %>
            </div>
            
            <!-- WhatsApp Quick Order -->
            <% if (product.sellerInfo && product.sellerInfo.phone) { %>
                <a 
                    href="https://wa.me/<%= product.sellerInfo.phone.replace(/[^0-9]/g, '') %>?text=Hi!%20I'm%20interested%20in%20<%= encodeURIComponent(product.name) %>"
                    target="_blank"
                    rel="noopener"
                    class="flex items-center gap-1.5 px-3 py-2 bg-green-500 hover:bg-green-600 text-white text-xs font-medium rounded-lg transition-colors"
                    onclick="event.stopPropagation()"
                >
                    <i data-lucide="message-circle" class="w-4 h-4"></i>
                    <span class="hidden sm:inline">Inquire</span>
                </a>
            <% } else { %>
                <button 
                    class="add-to-cart flex items-center gap-1.5 px-3 py-2 bg-olive-700 hover:bg-olive-800 text-white text-xs font-medium rounded-lg transition-colors"
                    data-id="<%= product._id %>"
                >
                    <i data-lucide="shopping-bag" class="w-4 h-4"></i>
                    <span class="hidden sm:inline">Add</span>
                </button>
            <% } %>
        </div>
        
        <!-- Seller Info -->
        <% if (product.sellerInfo) { %>
            <a 
                href="/store/<%= product.sellerInfo._id %>" 
                class="flex items-center gap-2 mt-3 pt-3 border-t border-olive-50 text-olive-500 hover:text-olive-700 transition-colors"
                onclick="event.stopPropagation()"
            >
                <div class="w-6 h-6 bg-olive-100 rounded-full flex items-center justify-center">
                    <i data-lucide="store" class="w-3 h-3 text-olive-600"></i>
                </div>
                <span class="text-xs font-medium truncate"><%= product.sellerInfo.storeName %></span>
            </a>
        <% } %>
    </div>
</div>
